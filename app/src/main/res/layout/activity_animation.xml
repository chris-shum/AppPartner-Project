<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animation"
    tools:context="com.apppartner.androidprogrammertest.AnimationActivity">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/animationImage"
        android:layout_width="@dimen/animation_background_width"
        android:layout_height="@dimen/animation_background_length"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_cell_animation_test" />

    <LinearLayout
        android:layout_width="@dimen/animation_text_width"
        android:layout_height="@dimen/animation_background_length"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/animationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/animation_padding"
            android:text="@string/animation_prompt"
            android:textSize="@dimen/animation_prompt" />

        <TextView
            android:id="@+id/bonusPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/animation_bonus"
            android:textSize="@dimen/animation_bonus" />
    </LinearLayout>

    <Button
        android:id="@+id/fadeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fade_margin"
        android:background="@drawable/btn_fade" />

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="@dimen/app_icon"
        android:layout_height="@dimen/app_icon"
        android:src="@drawable/ic_apppartner" />

    <ImageView
        android:id="@+id/hiddenAppIcon"
        android:layout_width="@dimen/app_icon"
        android:layout_height="@dimen/app_icon"
        android:src="@drawable/ic_apppartner"
        android:visibility="gone" />
</RelativeLayout>
